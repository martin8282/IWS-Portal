<% content_for :menu do %>
  <ul class="sidebar-nav">
    <li class="sidebar-brand">
      <a href="/report">Login</a>
    </li>
    <li>
      <a href="/about">About</a>
    </li>
  </ul>
<% end %>

<div class="row">
  <div class="col-lg-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :login, 'Login (User name or Email)' %>
        <%= f.text_field :login, class: 'form-control', placeholder: 'User name OR Email address', required: true, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: false %>
      </div>

      <%= f.submit 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>

    <% end %>
  </div>
</div>
