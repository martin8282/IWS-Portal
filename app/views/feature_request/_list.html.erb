<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Client</th>
    <th>Client Priority</th>
    <th>Product</th>
    <th>Target Date</th>
  </tr>

  <% @records.each do |record| %>
    <tr>
      <td><%= link_to(record[:title], "javascript: showDetails(#{record.id});void(0)") %></td>
      <td><%= record[:client] %></td>
      <td><%= record[:client_priority] %></td>
      <td><%= record[:product] %></td>
      <td><%= record[:target_date] ? record[:target_date].strftime('%m/%d/%Y') : '' %></td>
    </tr>
  <% end %>
</table>